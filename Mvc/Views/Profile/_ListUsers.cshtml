@model List<AppUser>

<div class="input-group mb-2">
    <div class="input-group-prepend">
        <span class="input-group-text"><i class="fa fa-search"></i></span>
    </div>
    <input type="text" class="form-control" id="search" placeholder="Ara...">
</div>

<div id="plist" class="mt-2 people-list">
    <ul class="list-unstyled chat-list mt-2 mb-0" id="myUList">
        @foreach (var user in Model)
        {
            <a asp-action="Index" asp-controller="Profile" asp-route-userName="@user.UserName">
            <li class="clearfix">
                <img src=@user.ProfilePicture  alt="avatar">
                <div class="about">  
                    <div class="name">@user.FirstName @user.LastName</div>
                    <div class="status"> <i class="fa fa-circle online"></i> @user.UserName </div>
                </div>
            </li>
            </a>
        }
    </ul>
</div>

<script>

    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myUList li").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>