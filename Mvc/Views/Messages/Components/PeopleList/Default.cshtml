@model List<AppUser>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/css/ChatPage.css" rel="stylesheet" />

@if(Model.Count == 0)
{
    <h4 class="text-danger">Henüz mesajın yok :(</h4>
}

<div id="plist" class="mt-2 people-list">
    <ul class="list-unstyled chat-list mt-2 mb-0">
        @foreach (var user in Model)
        {
            <a asp-action="ChatPage" asp-controller="Messages" asp-route-userName="@user.UserName">
            <li class="clearfix">
                <img src=@user.ProfilePicture alt="avatar">
                <div class="about">
                    <div class="name">@user.FirstName @user.LastName</div>
                    <div class="status"> <i class="fa fa-circle online"></i> çevrimiçi </div>
                </div>
            </li>
            </a>
        }
    </ul>
</div>
