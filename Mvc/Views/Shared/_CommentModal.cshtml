<script>

    $(function () {
        $("body").on("click", ".commentview", function () {
            var url = $(this).data("target");
            $.post(url, function (data) { })

                .done(function (data) {
                    $("#modelViewForComments .modal-body").html(data);
                    $("#modelViewForComments").modal("show");
                })

                .fail(function () {
                    $("#modelViewForComments .modal-body").text("Opps!!");
                    $("#modelViewForComments").modal("show");
                })

        });
    })

</script>

<div class="modal fade" id="modelViewForComments">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title h4" id="myModalLabel">Yorumlar</div>
                <button type="button" class="close " data-bs-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @*_ListComments PartialView*@
            </div>
        </div>
    </div>
</div>
