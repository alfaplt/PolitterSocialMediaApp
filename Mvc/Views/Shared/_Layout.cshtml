<body >
    <!-------------------------------Navigation Starts------------------>
    <nav class="navbar navbar-expand-md navbar-dark mb-5 sticky-top" >
        <a asp-action="Index" asp-controller="Posts" class="navbar-brand"><img src="~/img/politterLogo.png" alt="logo" class="img-fluid" width="90" height="90"></a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#responsive"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="responsive">
            <ul class="navbar-nav  text-capitalize">
                @*<li class="nav-item"><a asp-action="Index" asp-controller="posts" class="nav-link active">Anasayfa</a></li>*@

                @if (User.Identity.IsAuthenticated)
                {
                    @*href="/Account/Profile/@User.Identity.Name"*@
                    <li class="nav-item mr-3"><a class="nav-link active" asp-controller="Profile" asp-action="Index" asp-route-userName ="@User.Identity.Name" >Profilim</a></li>
                    <li class="nav-item mr-3"><a data-target="/Messages/_ListPeople" data-toggle="modal" type="button" class="messageview nav-link active">Mesajlar</a></li>
                    <li class="nav-item mr-3"><a data-target="/Profile/_ListUsers" data-toggle="modal" type="button" class="allusersview nav-link active">Arkadaşını Bul</a></li>
                    <li class="nav-item"><a asp-action="LogOut" asp-controller="Account" class="nav-link active">Çıkış Yap</a></li>
                    @*<li class="nav-item"><a class="nav-link active" href="#"><img src="~/img/avatar-dhg.png" alt="" class="rounded-circle ml-3 d-none d-md-block" width="40px" height="40px"></a></li>*@
                }
                else
                {
                    <li class="nav-item"><a asp-action="SignIn" asp-controller="Account" class="nav-link active">Giriş Yap</a></li>
                    <li class="nav-item"><a asp-action="SignUp" asp-controller="Account" class="nav-link active">Kayıt Ol</a></li>
                }

                @*<form action="" class="form-inline ml-auto d-none d-md-block"><input type="text" name="search" id="search" placeholder="Ara..." class="form-control form-control-sm" disabled></form>*@
                
               @* <li class="nav-item"><a href="#" class="text-decoration-none nav-link active" style="color:#CBE4F2;font-size:22px;"><i class="far fa-bell ml-3 d-none d-md-block"></i></a></li>*@
                
            </ul>
        </div>
    </nav>
    <!---------------------------------------------Ends navigation------------------------------>
    <!---------------------------Modal Section  starts------------------->

    @await Html.PartialAsync("_MessagesModal")
    @await Html.PartialAsync("_AllUsersModal")

    <!-------------------------------Modal Ends---------------------------->
