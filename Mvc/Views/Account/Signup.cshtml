	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>
	

	<div class="limiter">
		<div class="container-login100" style="background-image: url('/Login_v4/images/bg-01.jpg');">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
				<form class="login100-form validate-form" asp-controller="Account" asp-action="SignUp" method="post" enctype="multipart/form-data">
					<span class="login100-form-title p-b-49">
						Kayıt Ol
					</span>

					<div class="wrap-input100 validate-input mb-3" data-validate="Ad gereklidir">
						<span class="label-input100">Ad*:</span>
						<input class="input100" type="text" asp-for="FirstName">
						<span class="focus-input100" data-symbol="&#xf206;"></span>
					</div>

					<div class="wrap-input100 mb-3">
						<span class="label-input100">Soyad:</span>
						<input class="input100" type="text" asp-for="LastName" >
						<span class="focus-input100" data-symbol="&#xf206;"></span>
					</div>

					<div class="wrap-input100 validate-input mb-3" data-validate="Kullanıcı adı gerekli">
						<span class="label-input100">Kullanıcı Adı*:</span>
						<input class="input100" type="text" asp-for="UserName" >
						<span class="focus-input100" data-symbol="&#xf206;"></span>
					</div>

					<div class="wrap-input100 validate-input mb-3" data-validate="Email giriniz">
						<span class="label-input100">Email*:</span>
						<input class="input100" type="email" asp-for="Email" >
						<span class="focus-input100" data-symbol="&#xf206;"></span>
					</div>

					<div class="wrap-input100 mb-3" style="height:80px" >
						<span class="label-input100">Profil Fotoğrafı:</span>

						<input asp-for="ProfilePicture" class="ml-5" type="file" />
						
						<span class="focus-input100" data-symbol="&#xf206;"></span>
					</div>
				
					<div class="wrap-input100 validate-input mb-3" data-validate="Parola Gereklidir">
						<span class="label-input100">Parola*:</span>
						<input class="input100" type="password" asp-for="Password" >
						<span class="focus-input100" data-symbol="&#xf190;"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Password is required">
						<span class="label-input100">Parolayı doğrulayınız*:</span>
						<input class="input100" type="password" asp-for="PasswordConfirm">
						<span class="focus-input100" data-symbol="&#xf190;"></span>
					</div>

					<br />					
					<div class="text-danger" asp-validation-summary="All"></div>					
					
					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button class="login100-form-btn" type="submit">
								Kaydol
							</button>
						</div>
					</div>
					<div class="flex-col-c p-t-50">
						<a asp-controller="Account" asp-action="SignIn" class="txt2">
							Giriş Yap
						</a>
					</div>
					<div class="flex-col-c p-t-50">
						<a asp-controller="Home" asp-action="Index" class="txt2">
							Anasayfaya dön
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>

</body>
