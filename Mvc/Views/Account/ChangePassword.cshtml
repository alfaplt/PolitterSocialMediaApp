@model ChangePasswordDto

<div class="row">
	<div class="col-md-6 offset-md-3">
		<form class="form-group" asp-controller="Account" asp-action="ChangePassword" method="post">

			<div class="form-group">
				<label>Eski Şifre:</label>
				<input asp-for="OldPassword" type="password" class="form-control" />
			</div>
			<div class="form-group">
				<label>Yeni Şifre:</label>
				<input asp-for="NewPassword" type="password" class="form-control" />
			</div>
			<div class="form-group">
				<label>Yeni Şifreyi Tekrar Giriniz:</label>
				<input asp-for="PasswordConfirm" type="password" class="form-control" />
			</div>

			<div class="text-danger" asp-validation-summary="All"></div>
			<div class="text-danger">@ViewBag.wrongPwd</div>

			<button class="btn btn-info" type="submit">Şifre Güncelle</button>

		</form>

	</div>
</div>
