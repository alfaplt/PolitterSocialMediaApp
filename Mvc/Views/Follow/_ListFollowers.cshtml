@model List<Follow>

<ul class="list-unstyled">
    @foreach (var follower in Model)
    {
        <li class="media hover-media ">

            <img src=@follower.Following.ProfilePicture alt="img" width="40" height="40" class="rounded-circle mr-3">
            <div class="media-body text-dark">
                <a asp-action="@follower.Following.UserName" asp-controller="Profile"><h6 class="media-header link">@($"{follower.Following.FirstName} {follower.Following.LastName}")</h6></a>
                <p class="media-text">@($"@{follower.Following.UserName}")</p>
            </div>

        </li>
        <hr class="my-3">
    }
</ul>
